= form_for @person do |f|
  - if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :gender
    = f.select :gender, ['Male', 'Female', 'Other']
  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :maiden_name
    = f.text_field :maiden_name
  .field
    = f.label :birth_date
    = f.date_field :birth_date
  .field
    = f.label :death_date
    = f.date_field :death_date
  .field
    = f.label :mother
    = f.collection_select :mother_id, Person.where(gender: 'Female').where.not(id: @person.id), :id, :name, include_blank: true # TODO: gender
  .field
    = f.label :father
    = f.collection_select :father_id, Person.where(gender: 'Male').where.not(id: @person.id), :id, :name, include_blank: true
  .actions
    = f.submit 'Save'
